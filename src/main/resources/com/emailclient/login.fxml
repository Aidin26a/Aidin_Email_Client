<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.emailclient.controller.LoginController" style="-fx-background-color: #f4f4f4;">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label text="Aidin Email Client" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Gmail Address" prefWidth="300.0"/>
    <PasswordField fx:id="passwordField" promptText="16-character App Password" prefWidth="300.0"/>

    <Button text="Login" onAction="#handleLogin" prefWidth="300.0"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Label fx:id="statusLabel" textFill="RED"/>
</VBox>